<?php
function custom_weather_block_info() {
  $blocks = array();
  $blocks['custom_weather_block'] = array(
    'info' => t('Custom Weather Block'),
    'cache' => DRUPAL_CACHE_PER_ROLE,
  );
  return $blocks;
}

function custom_weather_block_view($delta = '') {
  $block = array();
  switch ($delta) {
    case 'custom_weather_block':
      $block['subject'] = t('Weather Forecast');
      $block['content'] = _custom_weather_block_content();
      break;
  }
  return $block;
}


function _custom_weather_block_content() {
  $content = '<div class="custom-weather-block">Your weather forecast here</div>';
  return $content;
}
