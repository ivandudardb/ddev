{# Set classes #}
{% set menu_class = 'social-menu' %}
{% set list__base_class = menu_class %}
{% set list__modifiers = menu_modifiers %}
{% set list__blockname = menu_blockname %}
{% set item_url = item.url %}


{# List #}
{% extends "@atoms/lists/list.twig" %}
{% block list__content %}
  {% for item in social_menu_items %}
    <div class="social_menu_item">
      <a href="{{ item.url }}" class="social_menu_link">
        <img src="{{ item.icon }}" alt="{{ item.title }}" class="social_menu_img" width="23px" height="23px">
      </a>
    </div>
  {% endfor %}
{% endblock %}


