<div class="teaser-container">
  <div class="taxonomy-container">
    <div class="category_link">
      {% include "@atoms/node-teaser-term/node-teaser-term.twig" with {
        term: term
      }
      %}
    </div>
    <div class="image">
      {% include "@atoms/node-teaser-image/node-teaser-image.twig" with {
        image: image,
      } %}
    </div>
  </div>

  <div class="main-title">
    {% include "@atoms/title/title.twig" with {
      img_src: img_src,
      title: title
    }
    %}
  </div>
  <div class="author-info secondary-block">
    {% include "@atoms/node-teaser-date/node-teaser-date.twig" with {
      author: author,
      created: created
    } %}
  </div>

</div>
